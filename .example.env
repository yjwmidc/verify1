# ===============================================
# 极验验证码服务 - 环境配置文件模板
# ===============================================
# 说明：
# 1. 复制此文件并重命名为 .env 后使用
# 2. 根据实际部署环境修改相应配置项
# 3. 敏感信息（如API密钥）请勿提交到版本控制系统

# ===============================================
# 应用基础设置
# ===============================================

# 应用调试模式
# true: 开启调试模式，显示详细错误信息
# false: 关闭调试模式，显示友好错误提示
APP_DEBUG = true

# 应用命名空间
# 留空表示使用默认命名空间
APP_NAMESPACE = 

# 是否启用路由
# true: 启用路由规则
# false: 关闭路由规则
WITH_ROUTE = true

# 默认应用
# 指定默认访问的应用模块
DEFAULT_APP = index

# 默认时区
# 应用使用的时区设置
DEFAULT_TIMEZONE = Asia/Shanghai

# 错误提示信息
# 生产环境下显示的友好错误信息
ERROR_MESSAGE = 页面错误！请稍后再试～

# 是否显示详细错误信息
# true: 显示详细错误堆栈
# false: 只显示ERROR_MESSAGE中配置的错误信息
SHOW_ERROR_MSG = false

# ===============================================
# 极验验证码配置
# ===============================================

# 极验验证码ID
# 从极验官网申请的验证码ID
GEETEST_CAPTCHA_ID = 你的极验ID

# 极验验证码密钥
# 从极验官网申请的验证码密钥
GEETEST_CAPTCHA_KEY = 你的极验密钥

# 极验API服务器地址
# 极验验证码服务的API地址
GEETEST_API_SERVER = https://gcaptcha4.geetest.com

# 验证码有效期（秒）
# 验证码的有效时间，过期后需要重新验证
GEETEST_CODE_EXPIRE = 300

# 验证码存储路径
# 验证码相关数据的存储路径
GEETEST_STORAGE_PATH = runtime/Geetest/

# ===============================================
# API密钥配置
# ===============================================

# API访问密钥
# 用于验证API请求的密钥，建议使用复杂字符串
API_KEY = 你的api密钥

# ===============================================
# Ticket生成盐值配置
# ===============================================

# Ticket生成盐值
# 用于生成ticket的盐值，建议使用复杂字符串，不要泄露
SALT = 你的盐值

# ===============================================
# 数据库配置
# ===============================================

# 数据库驱动类型
# sqlite: 使用SQLite数据库
# mysql: 使用MySQL数据库
# pgsql: 使用PostgreSQL数据库
DB_DRIVER = sqlite

# 数据库类型
# 与DB_DRIVER对应，指定具体的数据库类型
DB_TYPE = mysql

# 数据库主机地址
# MySQL/PostgreSQL等数据库的主机地址
DB_HOST = 127.0.0.1

# 数据库名称
# 数据库的名称
DB_NAME = 

# 数据库用户名
# 连接数据库的用户名
DB_USER = root

# 数据库密码
# 连接数据库的密码
DB_PASS = 

# 数据库端口
# 数据库服务的端口号
# MySQL默认: 3306
# PostgreSQL默认: 5432
DB_PORT = 3306

# 数据库字符集
# 数据库使用的字符集
DB_CHARSET = utf8mb4

# 数据库表前缀
# 数据库表名的前缀，留空表示无前缀
DB_PREFIX = 

# SQLite数据库路径
# 当使用SQLite数据库时，指定数据库文件的路径
DB_SQLITE_PATH = ./database/geetest.db